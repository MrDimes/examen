{% extends "base.html.twig" %}

{% block content %}
    <h1 class="text-center my-3 display-5">Modifier les informations de {{ livre.titre }}</h1>
    <div class="container mt-5">
    {{ form_start(form) }}
        <div class="mb-3">
        <label for="livre_titre">Titre</label>
        {{form_widget(form.titre, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="mb-3">
        <label for="livre_auteur">Auteur</label>
        {{form_widget(form.auteur, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="mb-3">
        <label for="livre_avis">Avis</label>
        {{form_widget(form.avis, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="mb-3">
        <label for="livre_note">Note</label>
        {{form_widget(form.note, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="mb-3">
        <input type="submit" class="btn btn-success">
        </div>
    {{ form_end(form) }}
    </div>
{% endblock %}